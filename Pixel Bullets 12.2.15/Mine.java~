import java.awt.*;import javax.swing.*;import java.awt.image.BufferedImage;import java.io.*;import javax.imageio.ImageIO;import java.util.*;public class Mine extends Projektil{    private Minenleger waffe;    int timer;    public Mine(double x, double y,int reichweite, int schaden, Spieler spieler, Minenleger waffe){        super(x,y,1,1,0,0,reichweite,schaden,spieler);        this.waffe = waffe;        Objektmanager.add(this);    }    public void bewegungBerechnen(){         timer++;        if(timer>30){            Spieler sp = kollidiertMitSpieler();            if(sp != null){                sprengen();            }        }    }    public void zeichnen(Graphics g, JPanel panel){        switch(element){            default:            if(timer%50==0)                g.setColor(new Color(255,0,0));            else                        g.setColor(new Color(255,0,0,50));            case "Tarnung":            if(timer%50==0)                g.setColor(new Color(100,100,100));            else                        g.setColor(new Color(100,100,100,50));            break;            case "Feuer":            if(timer%50==0)                g.setColor(new Color(255,100,50));            else                        g.setColor(new Color(255,100,50,50));            break;            case "Eis":            if(timer%50==0)                g.setColor(new Color(0,200,200));            else                        g.setColor(new Color(0,200,200,50));            break;            case "Gift":            if(timer%50==0)                g.setColor(new Color(150,200,50));            else                        g.setColor(new Color(150,200,50,50));            break;            case "Verfolgung":            if(timer%50==0)                g.setColor(new Color(200,50,150));            else                        g.setColor(new Color(200,50,150,50));            break;            case "Explosiv":            if(timer%50==0)                g.setColor(new Color(255,200,0));            else                        g.setColor(new Color(255,200,0,50));            break;        }        g.fillRect((int)(x*genauigkeit),(int)(y*genauigkeit),(int)(breite*genauigkeit),(int)(hoehe*genauigkeit));    }    public void sprengen(){        int r = reichweite;        if(element=="Explosiv")            r+=3;        new Explosion(x,y,r,schaden,besitzer);        Objektmanager.getProjektile().remove(this);        waffe.mineEntfernen(this);    }}